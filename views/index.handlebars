<script type="text/javascript">
  $(".deldevoured").on("click", function(event) {
    // Get the ID from the button.
    // This is shorthand for $(this).attr("data-devouredid")
    var id = $(this).data("devouredid");

    // Send the DELETE request.
    $.ajax("/api/burgers/" + id, {
      type: "DELETE"
    }).then(
      function() {
        console.log("deleted id ", id);
        // Reload the page to get the updated list
        location.reload();
      }
    );
  });

 $("#createburger_name").on("submit", function(event) {
    // Make sure to preventDefault on a submit event.
    event.preventDefault();

    // [name=plan] will find an element with a "name" attribute equal to the string "plan"
    var burger_name = $("#createburger_name [name=burger_name]").val().trim();

    // Send the POST request.
    $.ajax( {
      url: "/api/burgers",
      type: "POST",
      data: {
        burger_name: burger_name
      }
    }).then(
      function() {
        console.log("created new burger");
        // Reload the page to get the updated list
        location.reload();
      }
    );
  });



   
</script>

