<h1>Burger App!</h1>

<div class="text-center">
		<img src="../../public/assets/images/burger.png" alt="burger" class="burger_image">
	</div>

	<div class="container">

		<div class="row">
			<div class="col-6">
				<h2>To Be Eaten</h2>
				<hr>
				<div id="waiting-list"></div>
			</div>
			<div class="col-6">
				<h2>Devoured</h2>
				<hr>
				<div id="devoured_list"></div>
			</div>
		</div>

		<div class="row">
			<div class="col-sm-8 col-sm-offset-2">
				<p class="cool-font">Add A New Burger To The Menu and Click Submit!</p>
				<textarea class="form-control" rows="3" id="chirp-box" placeholder="Enter Burger Here!"></textarea>
				<button id="chirp-submit" class="btn btn-lg pull-right">Submit!</button>
			</div>
		</div>

<ul>
  {{!-- {{#each burgers}} --}}
  <li>
    <p class="burger-container">
      {{!-- {{this.id}}. {{this.burger_name}} --}}

      <button data-devoured-id="{{this.id}}" class="deldevoured">Devour Burger!</button>
    </p>
  </li>
  {{!-- {{/each}} --}}
</ul>

<h2>List a Burger</h2>
<form id="createburger_name" class="button-size">
  <textarea type="text" name="burger_name" class="new_item"></textarea>
  <button type="submit">Save Burger!</button>
</form>

<script type="text/javascript">
  $(".deldevoured").on("click", function(event) {
    // Get the ID from the button.
    // This is shorthand for $(this).attr("data-devouredid")
    let id = $(this).data("devouredid");

    // Send the DELETE request.
    $.ajax("/api/burgers/" + id, {
      type: "DELETE"
    }).then(
      function() {
        console.log("deleted id ", id);
        // Reload the page to get the updated list
        location.reload();
      }
    );
  });

