<h1>Burger App!</h1>

<ul>
  {{#each burgers}}
  <li>
    <p>
      {{this.id}}. {{this.burger_name}}

      <button data-devouredid="{{this.id}}" class="deldevoured">Devour Burger!</button>
    </p>
  </li>
  {{/each}}
</ul>

<h2>List a Burger</h2>
<form id="createburger_name" class="button-size">
  <textarea type="text" name="burger_name"></textarea>
  <button type="submit">Save Burger!</button>
</form>

